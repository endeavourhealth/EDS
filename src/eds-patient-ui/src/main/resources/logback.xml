<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- appender for console -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %level [%thread] %logger{10}:%line %X{nhsNumber} - %msg%n</pattern>
    </encoder>
  </appender>


