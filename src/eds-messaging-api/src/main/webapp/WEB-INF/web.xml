<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Endeavour Data Service</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>org.endeavourhealth.messagingapi</param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>org.glassfish.jersey.jackson.JacksonFeature</param-value>
        </init-param>

        <!-- enable directory listings -->
        <init-param>
            <param-name>listings</param-name>
            <param-value>true</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Endeavour Data Service</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <!--register our Startup class as a servlet listener so we can perform one-time setup-->
    <listener>
        <listener-class>
            org.endeavourhealth.messagingapi.configuration.Startup
        </listener-class>
    </listener>

    <!-- ============================================ -->
    <!-- JEE security settings - Keycloak integration -->
    <!-- ============================================ -->

    <!-- set the class to provide keycloak.json -->
    <context-param>
        <param-name>keycloak.config.resolver</param-name>
        <param-value>org.endeavourhealth.core.security.keycloak.KeycloakConfigResolverImpl</param-value>
    </context-param>

    <!-- GetData -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>GetData</web-resource-name>
            <url-pattern>/api/GetData*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>eds_messaging_get</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- PostMessage -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>PostMessage</web-resource-name>
            <url-pattern>/api/PostMessage*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>eds_messaging_post</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- use Keycloak authentication valve installed in the container -->
    <login-config>
        <auth-method>KEYCLOAK</auth-method>
        <realm-name>Endeavour</realm-name>
    </login-config>

    <!-- all roles in the system MUST be specified here -->
    <security-role>
        <role-name>eds_user</role-name>
    </security-role>
    <security-role>
        <role-name>eds_admin</role-name>
    </security-role>
    <security-role>
        <role-name>eds_superuser</role-name>
    </security-role>
    <security-role>
        <role-name>eds_messaging_get</role-name>
    </security-role>
    <security-role>
        <role-name>eds_messaging_post</role-name>
    </security-role>

</web-app>